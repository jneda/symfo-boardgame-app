{% extends 'base.html.twig' %}

{% block title %}Voir les jeux{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; } img { max-height: 256px; margin-bottom: 2rem; object-fit: cover; border-radius: 0.2rem; }
</style>

<div class="example-wrapper">
    {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="flash-{{ label }}">{{ message }}</div>
            {% endfor %}
    {% endfor %}

    <h1>Voir les jeux</h1>
    {% for boardgame in boardgames %}
        {{ include('board_game/_board_game.html.twig') }}
    {% endfor %}
    {# <p>{{ dump(boardgames) }}</p> #}
</div>
{% endblock %}
