{% extends 'base.html.twig' %}

{% block title %}
  {{ category.label }}
{% endblock %}

{% block body %}
  <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font:
    18px/1.5 sans-serif; } .example-wrapper code { background: #F5F5F5; padding:
    2px 6px; } img { max-height: 256px; margin-bottom: 2rem; object-fit: cover;
    border-radius: 0.2rem; }
  </style>

  <div class="example-wrapper">
    <article>
      <h1>
        {{ category.label }}
      </h1>
      <p>
        {{ category.description }}
      </p>
      {% for game in category.boardgames %}
        {{
          include(
            'board_game/_board_game.html.twig',
            {
              boardgame: game
            }
          )
        }}
      {% endfor %}
      <a href="{{ path('app_category') }}">&larr; Toutes les cat√©gories</a>
    </article>
  </div>
{% endblock %}
