{% extends 'base.html.twig' %}

{% block title %}
  Register
{% endblock %}

{% block body %}
  <div class="wrapper">
    <h1>
      S'inscrire
    </h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.username, { label: "Pseudonyme"}) }}
    {{ form_row(registrationForm.email) }}
    {{
      form_row(
        registrationForm.plainPassword,
        {
          label: 'Mot de passe'
        }
      )
    }}
    {{ form_row(registrationForm.agreeTerms, { label: "J'accepte les conditions"}) }}

    <button type="submit" class="btn" style="margin-top: 1rem;">S'inscrire</button>
    {{ form_end(registrationForm) }}
  </div>
{% endblock %}
