{% extends 'base.html.twig' %}

{% block title %}
  Register
{% endblock %}

{% block body %}
  <style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font:
    18px/1.5 sans-serif; } .example-wrapper code { background: #F5F5F5; padding:
    2px 6px; } img { max-height: 256px; margin-bottom: 2rem; object-fit: cover;
    border-radius: 0.2rem; }
  </style>

  <div class="example-wrapper">
    <h1>
      Register
    </h1>

    {{ form_start(registrationForm) }}
    {{ form_row(registrationForm.username) }}
    {{ form_row(registrationForm.email) }}
    {{
      form_row(
        registrationForm.plainPassword,
        {
          label: 'Password'
        }
      )
    }}
    {{ form_row(registrationForm.agreeTerms) }}

    <button type="submit" class="btn">Register</button>
    {{ form_end(registrationForm) }}
  </div>
{% endblock %}
